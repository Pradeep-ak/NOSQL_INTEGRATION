<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<!DOCTYPE gsa-template
        PUBLIC "-//Art Technology Group, Inc.//DTD General SQL Adapter//EN"
        "http://www.atg.com/dtds/gsa/gsa_1.0.dtd">	
<gsa-template>
  <header>
	<name>MongoDB Queue Repository</name>
	<author>Self Team</author> 
	<version>1.0</version>
	<description>A repository to hold item changed record logs</description>   
  </header>
  <item-descriptor name="snapshotItems">
  	<property name="snapShotId" data-type="string"/>
  	<property name="deploymentId" data-type="string" default="null"/>
  	<property name="deploymentDate" data-type="timestamp"/>
  	<property name="synchItems" data-type="list" component-item-type="synchItem"/>
  	<property name="synched" data-type="boolean" default="false"/>
  </item-descriptor>
  <item-descriptor name="synchItem">
  	<property name="itemId" data-type="string"/>
  	<property name="assetVersion" data-type="string"/>
  	<property name="itemDescriptorName" data-type="string"/>
  	<property name="repositoryName" data-type="string"/>
  	<property name="isSynched" data-type="boolean" default="false"/>
  </item-descriptor>
</gsa-template>

